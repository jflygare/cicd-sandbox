# Run the container with `docker run -p 3000:3000 -t cicd-sandbox`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system cicd-sandbox && \
          adduser --system -G cicd-sandbox cicd-sandbox

COPY dist/apps/cicd-sandbox cicd-sandbox/
RUN chown -R cicd-sandbox:cicd-sandbox .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix cicd-sandbox --omit=dev -f install

EXPOSE 3000
CMD [ "node", "cicd-sandbox" ]
